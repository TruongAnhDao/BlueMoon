<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- Lưu ý: fx:controller trỏ tới file Java xử lý bảng này, nếu chưa có thì để trống hoặc tạo sau -->
<VBox prefHeight="600.0" prefWidth="680.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="DASHBOARD &gt; QUẢN LÝ HỘ KHẨU" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>

      <HBox spacing="10.0">
         <children>
            <TextField promptText="Tìm kiếm hộ dân..." style="-fx-background-radius: 5;" HBox.hgrow="ALWAYS" />
            <Button text="Tìm" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="+ Thêm mới" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" />
            <Button text="Xuất Excel" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
         </children>
      </HBox>

      <TableView VBox.vgrow="ALWAYS" style="-fx-border-color: #ecf0f1;">
        <columns>
          <TableColumn text="Mã Hộ" prefWidth="100.0" />
          <TableColumn text="Chủ hộ" prefWidth="150.0" />
          <TableColumn text="Diện tích" prefWidth="100.0" />
          <TableColumn text="Trạng thái" prefWidth="100.0" />
          <TableColumn text="Thao tác" prefWidth="100.0" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>