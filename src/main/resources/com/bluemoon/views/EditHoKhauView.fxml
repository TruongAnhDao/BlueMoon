<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15.0" style="-fx-padding: 20; -fx-background-color: white;" prefWidth="600" prefHeight="550"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.bluemoon.app.controllers.EditHoKhauController">
   <children>
      <Label text="CHỈNH SỬA HỘ KHẨU" textFill="#e67e22">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      
      <TitledPane text="Thông tin chung" collapsible="false">
          <GridPane hgap="15.0" vgap="15.0">
             <columnConstraints>
                 <ColumnConstraints minWidth="100.0" />
                 <ColumnConstraints hgrow="ALWAYS" minWidth="250.0"/>
             </columnConstraints>
             <children>
                <Label text="Mã hộ khẩu:" GridPane.rowIndex="0" />
                <TextField fx:id="txtMaHo" editable="false" style="-fx-background-color: #ecf0f1;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Địa chỉ:" GridPane.rowIndex="1" />
                <TextField fx:id="txtDiaChi" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Chủ hộ:" GridPane.rowIndex="2" />
                <ComboBox fx:id="cbChuHo" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <Button onAction="#handleSaveInfo" text="Lưu thông tin chung" style="-fx-background-color: #27ae60; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
             </children>
          </GridPane>
      </TitledPane>

      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
          <HBox alignment="CENTER_LEFT" spacing="10.0">
              <Label text="Danh sách thành viên" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
              <Region HBox.hgrow="ALWAYS" />
              <Button text="+ Thêm thành viên" onAction="#handleAddMember" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
              <Button text="Xóa thành viên" onAction="#handleRemoveMember" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
          </HBox>

          <TableView fx:id="tableMembers" VBox.vgrow="ALWAYS" prefHeight="200.0">
              <columns>
                  <TableColumn fx:id="colTenTV" text="Họ tên" prefWidth="150.0" />
                  <TableColumn fx:id="colNgaySinhTV" text="Ngày sinh" prefWidth="100.0" />
                  <TableColumn fx:id="colCccdTV" text="CCCD" prefWidth="120.0" />
                  <TableColumn fx:id="colQuanHeTV" text="Quan hệ" prefWidth="100.0" />
              </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
          </TableView>
      </VBox>
      
      <HBox alignment="CENTER_RIGHT">
         <Button onAction="#handleClose" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Đóng cửa sổ" />
      </HBox>
   </children>
</VBox>