<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="680.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bluemoon.app.controllers.HouseholdController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- Title Header -->
      <Label text="DASHBOARD &gt; QUẢN LÝ HỘ KHẨU" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>

      <!-- Toolbar: Search and Action Buttons -->
      <HBox spacing="10.0">
         <children>
            <TextField promptText="Tìm kiếm hộ dân..." style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
               </padding>
            </TextField>
            <Button mnemonicParsing="false" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Tìm">
               <padding>
                  <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="+ Thêm mới">
               <padding>
                  <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Xuất Excel">
               <padding>
                  <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
               </padding>
            </Button>
         </children>
      </HBox>

      <!-- Data Table -->
      <TableView fx:id="householdTable" style="-fx-background-color: transparent; -fx-border-color: #ecf0f1;" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colMaHo" prefWidth="120.0" style="-fx-alignment: CENTER-LEFT;" text="Mã Hộ" />
          <TableColumn fx:id="colDienTich" prefWidth="150.0" style="-fx-alignment: CENTER-LEFT;" text="Diện tích" />
            <TableColumn fx:id="colTrangThai" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Trạng thái" />
            <TableColumn fx:id="colThaoTac" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Thao tác" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <!-- Footer Summary -->
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Tổng cộng: 150 hộ dân | Tổng thu tháng: 120,000,00 VNĐ" textFill="#7f8c8d">
               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>